extends layout

block content
  h1 Dashboard

  // Include Chart.js library
  script(src='https://cdn.jsdelivr.net/npm/chart.js')

  // Daily Sells Chart
  canvas#dailySellsChart(width='400' height='200')
  script.
    var dailySellsData = !{dailySellsData};
    var dailySellsChart = new Chart(document.getElementById('dailySellsChart'), {
      type: 'bar',
      data: {
        labels: dailySellsData.labels,
        datasets: [{
          label: 'Daily Sells Quantity',
          data: dailySellsData.data,
          backgroundColor: 'rgba(75, 192, 192, 0.2)',
          borderColor: 'rgba(75, 192, 192, 1)',
          borderWidth: 1
        }]
      },
      options: {
        scales: {
          y: { beginAtZero: true }
        }
      }
    });

